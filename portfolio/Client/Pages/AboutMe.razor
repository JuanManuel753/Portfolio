@inject IStringLocalizer<Resource> localizer
@page "/Aboutme"

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Portfolio</title>
    <link rel="stylesheet" href="estilo.css">
</head>
<body>
    <section  name="sobremi" class="sobremi">
        <div class="contenido-seccion">
            <MudText Style="font-family: 'Righteous'; text-align: center;padding: 20px;" Typo="Typo.h3">@localizer["AboutMe.Title"]</MudText>
            

            <MudText Typo="Typo.body2"><span>@localizer["AboutMe.Name"]</span> @localizer["AboutMe.Content"]</MudText>

            <div class="fila">
                <!-- datos personales -->
                <div class="col">
                    <MudText Typo="Typo.h6" Style="margin-bottom:10px;">@localizer["AboutMe.PersonalInformation"]</MudText>
                    <ul>
                        <li>
                            <MudText Typo="Typo.h6"><strong>@localizer["AboutMe.DateOfBirth"]</strong></MudText>
                            <MudText Typo="Typo.body2">11-04-2000</MudText>
                        </li>
                        <li>
                            <MudText Typo="Typo.h6"><strong>@localizer["AboutMe.Phone"]</strong></MudText>
                            <MudText Typo="Typo.body2">317 637 4276</MudText>
                        </li>
                        <li>
                            <MudText Typo="Typo.h6"><strong>@localizer["AboutMe.Email"]</strong></MudText>
                            <MudText Typo="Typo.body2">juancho-_-11@hotmail.com</MudText>
                        </li>
                        <li>
                            <MudText Typo="Typo.h6"><strong>@localizer["AboutMe.Country"]</strong></MudText>
                            <MudText Typo="Typo.body2">Cartago, Valle Del Cauca, Colombia</MudText>
                        </li>

                    </ul>
                </div>

                <!-- intereses -->
                <div class="col">
                    <MudText Typo="Typo.h6" Style="margin-bottom:10px; margin-left:8px;">@localizer["AboutMe.interests"]</MudText>
                    <div class="contenedor-intereses">
                        <div class="interes">
                            <i class="fa-solid fa-code"></i>
                            <span>@localizer["AboutMe.DivDev"]</span>
                        </div>
                        <div class="interes">
                            <i class="fa-solid fa-gamepad"></i>
                            <span>@localizer["AboutMe.DivGames"]</span>
                        </div>
                        <div class="interes">
                            <i class="fa-solid fa-headphones"></i>
                            <span>@localizer["AboutMe.DivMusic"]</span>
                        </div>
                        <div class="interes">
                            <i class="fa-solid fa-plane"></i>
                            <span>@localizer["AboutMe.DivTravel"]</span>
                        </div>
                        <div  class="interes">
                            <i class="fa-solid fa-person-hiking"></i>
                            <span>@localizer["AboutMe.DivSports"]</span>
                        </div>
                        <div class="interes">
                            <i class="fa-solid fa-car"></i>
                            <span>@localizer["AboutMe.DivCars"]</span>
                        </div>

                    </div>
                </div>
            </div>
            <div style="text-align: center; margin: 20px auto; padding: 10px 22px;"> 
                <MudButton Href="https://drive.google.com/file/d/1BBbwAceYodVc-D-tsBTFcFJ9TK2wavsP/view?usp=share_link" Target="_blank" Variant="Variant.Outlined" EndIcon="@Icons.Material.Filled.Download" Color="Color.Info">
                    @localizer["AboutMe.ButtonDownloadCV"]
                </MudButton>
            </div>
        </div>
    </section>
    <footer>
        <a href="aboutme" class="arriba">
            <i class="fa-solid fa-angles-up"></i>
        </a>
        <div class="redes">
            <a href="https://wa.me/573176374276" target="_blank"><i class="fa-brands fa-whatsapp"></i></a>
            <a href="https://www.instagram.com/juanmanuelr753/" target="_blank"><i class="fa-brands fa-instagram"></i></a>
            <a href="https://github.com/JuanManuel753" target="_blank"><i class="fa-brands fa-github"></i></a>
            <a href="https://www.linkedin.com/in/juan-manuel-r-08885b128/" target="_blank"><i class="fa-brands fa-linkedin-in"></i></a>
        </div>
    </footer>
</body>
</html>

